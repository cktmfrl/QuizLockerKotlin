<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chahye.quizlocker">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <!-- 브로드캐스트 수신을 위한 권한 요청(부팅이 완료될 때) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Foreground 서비스 실행 권한 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- 진동 서비스 사용 권한 요청 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quizlocker">
        <activity
            android:name="com.chahye.quizlocker.QuizLockerActivity"
            android:exported="false" />

        <service
            android:name="com.chahye.quizlocker.LockScreenService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.chahye.quizlocker.ScreenOffExActivity"
            android:exported="false" />
        <!-- <activity android:name=".MainActivity" /> -->
        <activity android:name="com.chahye.quizlocker.FileExActivity" />
        <activity android:name="com.chahye.quizlocker.PrefExActivity" />
        <activity android:name="com.chahye.quizlocker.PrefFragmentActivity" />
        <activity
            android:name="com.chahye.quizlocker.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 암시적 인텐트로 실행되는 브로드캐스트 리시버 등록 -->
        <receiver
            android:name="com.chahye.quizlocker.BootCompleteReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>